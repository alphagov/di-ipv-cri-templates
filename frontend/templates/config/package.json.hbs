{
  "name": "ipv-cri-{{ kebabCase criName }}-front",
  "description": "Frontend for the {{ titleCase criName }} Credential Issuer",
  "scripts": {
    "start": "node src/app.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "build": "npm run build:sass && npm run build:js && npm run copy-assets",
    "build:js": "yarn build:js:analytics && yarn build:js:all",
    "build:js:analytics": "mkdir -p dist/public/javascripts; uglifyjs node_modules/@govuk-one-login/one-login-analytics/lib/analytics.js node_modules/@govuk-one-login/di-ipv-cri-common-express/src/assets/javascript/analytics/ua/init.js --beautify -o dist/public/javascripts/analytics.js",
    "build:js:all": "mkdir -p dist/public/javascripts; uglifyjs node_modules/govuk-frontend/govuk/all.js node_modules/hmpo-components/all.js --beautify -o dist/public/javascripts/all.js",
    "build:sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ && copyfiles -u 3 src/assets/javascript/*.js dist/public/scripts",
    "check-translation": "node node_modules/@govuk-one-login/di-ipv-cri-common-express/scripts/checkTranslations.js ../../../../src/locales/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "unit": "jest --silent",
    "test": "npm run unit --",
    "test:coverage": "npm run unit -- --coverage"
  },
  "devDependencies": {
    "chai": "4.3.8",
    "chai-as-promised": "7.1.1",
    "copyfiles": "2.4.1",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.7.0",
    "prettier": "^3.0.3",
    "nodemon": "3.0.1",
    "sass": "1.66.1",
    "uglify-js": "3.17.4"
  },
  "dependencies": {
    "@govuk-one-login/di-ipv-cri-common-express": "6.3.0",
    "@govuk-one-login/one-login-analytics": "0.0.9",
    "@govuk-one-login/frontend-language-toggle": "1.1.0",
    "@aws-sdk/client-dynamodb": "3.609.0",
    "axios": "1.4.0",
    "cfenv": "1.2.4",
    "connect-dynamodb": "3.0.3",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-session": "1.17.3",
    "govuk-frontend": "4.8.0",
    "hmpo-app": "3.0.1",
    "hmpo-components": "6.3.0",
    "hmpo-form-wizard": "13.0.0",
    "hmpo-i18n": "6.0.1",
    "hmpo-logger": "7.0.1",
    "nunjucks": "3.2.4"
  }
}
